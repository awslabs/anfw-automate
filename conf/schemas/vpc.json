{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "^[a-z]{2}-[a-z]+-[0-9]+$": {
            "type": "object",
            "properties": {
                "vpc_cidr": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+\\.\\d+/\\d{1,2}$"
                },
                "availability_zones": {
                    "type": "object",
                    "properties": {
                        "az_a": {
                            "type": "string",
                            "pattern": "^[a-z]{2}-[a-z]+-[0-9][a-z]$"
                        },
                        "az_b": {
                            "type": "string",
                            "pattern": "^[a-z]{2}-[a-z]+-[0-9][a-z]$"
                        },
                        "az_c": {
                            "type": "string",
                            "pattern": "^[a-z]{2}-[a-z]+-[0-9][a-z]$"
                        }
                    },
                    "required": [
                        "az_a",
                        "az_b",
                        "az_c"
                    ]
                },
                "cidr_masks": {
                    "type": "object",
                    "properties": {
                        "tgw": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "firewall": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "nat": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "required": [
                        "tgw",
                        "firewall",
                        "nat"
                    ]
                }
            },
            "required": [
                "vpc_cidr",
                "availability_zones",
                "cidr_masks"
            ]
        }
    },
    "additionalProperties": false
}