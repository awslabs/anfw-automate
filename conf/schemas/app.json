{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "propertyNames": {
        "pattern": "^[a-z]+(-[a-z]+)*$"
    },
    "additionalProperties": {
        "type": "object",
        "properties": {
            "vpc_id": {
                "type": "string"
            },
            "vpc_cidr": {
                "type": "string",
                "format": "ipv4"
            },
            "internal_network_cidrs": {
                "type": "string"
            },
            "rule_order": {
                "type": "string",
                "enum": [
                    "DEFAULT_ACTION_ORDER",
                    "STRICT_ORDER"
                ]
            },
            "supported_regions": {
                "type": "array",
                "items": {
                    "pattern": "^[a-z]+(-[a-z]+)*$"
                }
            },
            "firewall_policy_arns": {
                "type": "object",
                "propertyNames": {
                    "pattern": "^[a-z]+(-[a-z]+)*$"
                },
                "additionalProperties": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^arn:aws:.+:[a-z0-9-]+:[0-9]+:.+$"
                    }
                }
            }
        },
        "required": [
            "vpc_id",
            "vpc_cidr",
            "internal_network_cidrs",
            "rule_order",
            "supported_regions",
            "firewall_policy_arns"
        ]
    }
}