{
  "name": "anfw-automate",
  "version": "2.1.0",
  "description": "Automate AWS Network Firewall Rule Management",
  "type": "module",
  "private": true,
  "workspaces": [
    "app",
    "firewall",
    "vpc",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=shared",
    "build:modules": "npm run build --workspace=app --workspace=firewall --workspace=vpc",
    "build:app": "npm run build --workspace=app",
    "build:firewall": "npm run build --workspace=firewall",
    "build:vpc": "npm run build --workspace=vpc",
    "test": "npm test --workspaces",
    "test:shared": "npm test --workspace=shared",
    "test:modules": "npm test --workspace=app --workspace=firewall --workspace=vpc",
    "test:app": "npm test --workspace=app",
    "test:firewall": "npm test --workspace=firewall",
    "test:vpc": "npm test --workspace=vpc",
    "test:integration": "chmod +x scripts/integration-test.sh && scripts/integration-test.sh",
    "clean": "npm run clean --workspaces && npm run clean:artifacts",
    "clean:modules": "npm run clean --workspaces",
    "clean:artifacts": "rm -rf cdk.out dist *.log build-report.json integration-test-report.json",
    "lint": "npm run lint --workspaces",
    "lint-fix": "npm run lint-fix --workspaces",
    "lint:modules": "npm run lint --workspaces",
    "update": "npm update --workspaces",
    "update:modules": "npm update --workspace=app --workspace=firewall --workspace=vpc --workspace=shared",
    "local:setup": "chmod +x scripts/local-dev-setup.sh && scripts/local-dev-setup.sh",
    "local:start": "docker-compose -f docker-compose.local.yml up -d",
    "local:stop": "docker-compose -f docker-compose.local.yml down",
    "local:logs": "docker-compose -f docker-compose.local.yml logs -f",
    "deploy:local": "source deploy_vars.local.sh && make deploy",
    "synth": "npm run synth:modules",
    "synth:modules": "cd app && npx cdk synth && cd ../firewall && npx cdk synth && cd ../vpc && npx cdk synth",
    "prepare": "husky install && chmod +x .husky/* || true",
    "commit": "npx cz",
    "commit:retry": "npx cz --retry",
    "validate:commit": "commitlint --edit",
    "validate:branch": "validate-branch-name",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "version:sync": "node scripts/sync-versions.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/cz-commitlint": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^24.2.0",
    "typescript": "~5.9.3",
    "validate-branch-name": "^1.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awslabs/anfw-automate.git"
  },
  "keywords": [
    "aws",
    "network-firewall",
    "cdk",
    "serverless",
    "automation"
  ],
  "author": "AWS Network Firewall Team",
  "license": "Apache-2.0",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.py": [
      "python -m py_compile"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "validate-branch-name": {
    "pattern": "^(main|dev|feature/.+|hotfix/.+|release/.+)$",
    "errorMsg": "Branch name must follow the pattern: main, dev, feature/*, hotfix/*, or release/*"
  }
}
