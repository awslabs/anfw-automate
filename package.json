{
  "name": "anfw-automate",
  "version": "2.1.0",
  "description": "Automate AWS Network Firewall Rule Management",
  "type": "module",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "app",
    "firewall",
    "vpc",
    "shared"
  ],
  "scripts": {
    "build": "yarn build:shared && yarn build:modules",
    "build:shared": "yarn workspace shared build",
    "build:modules": "yarn workspace app build && yarn workspace firewall build && yarn workspace vpc build",
    "build:app": "yarn build:shared && yarn workspace app build",
    "build:firewall": "yarn build:shared && yarn workspace firewall build",
    "build:vpc": "yarn build:shared && yarn workspace vpc build",
    "test": "yarn workspaces foreach --all run test",
    "test:shared": "yarn workspace shared test",
    "test:modules": "yarn workspace app test && yarn workspace firewall test && yarn workspace vpc test",
    "test:app": "yarn workspace app test",
    "test:firewall": "yarn workspace firewall test",
    "test:vpc": "yarn workspace vpc test",
    "clean": "yarn workspaces foreach --all run clean && yarn clean:artifacts",
    "clean:modules": "yarn workspaces foreach --all run clean",
    "clean:artifacts": "rm -rf build-report.json",
    "lint": "yarn workspaces foreach --all run lint",
    "lint-fix": "yarn workspaces foreach --all run lint-fix",
    "lint:modules": "yarn workspaces foreach --all run lint",
    "security:audit": "./scripts/security-scan.sh nodejs",
    "security:bandit": "./scripts/security-scan.sh python",
    "security:cdk-nag": "./scripts/security-scan.sh cdk",
    "security:containers": "./scripts/security-scan.sh containers",
    "security:all": "./scripts/security-scan.sh all",
    "update": "yarn up '*'",
    "update:modules": "yarn workspace app up '*' && yarn workspace firewall up '*' && yarn workspace vpc up '*' && yarn workspace shared up '*'",
    "synth": "npm run synth:modules",
    "synth:modules": "cd app && npx cdk synth && cd ../firewall && npx cdk synth && cd ../vpc && npx cdk synth",
    "prepare": "husky install && chmod +x .husky/* || true",
    "commit": "node scripts/commit.js",
    "validate:commit": "commitlint --edit",
    "validate:branch": "validate-branch-name",
    "changelog:unreleased": "node scripts/changelog-generator.js unreleased",
    "changelog:preview": "node scripts/changelog-generator.js preview",
    "changelog:release": "node scripts/changelog-generator.js release",
    "setup:git-template": "node scripts/setup-git-template.js",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "version:sync": "node scripts/sync-versions.js"
  },
  "overrides": {
    "glob": "^11.0.0",
    "tmp": "^0.2.4",
    "inquirer": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^21.1.2",
    "typescript": "~5.9.3",
    "validate-branch-name": "^1.3.2"
  },
  "engines": {
    "node": ">=20.8.1",
    "npm": ">=8.0.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awslabs/anfw-automate.git"
  },
  "keywords": [
    "aws",
    "network-firewall",
    "cdk",
    "serverless",
    "automation"
  ],
  "author": "AWS Network Firewall Team",
  "license": "Apache-2.0",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main|dev|feature/.+|hotfix/.+|release/.+)$",
    "errorMsg": "Branch name must follow the pattern: main, dev, feature/*, hotfix/*, or release/*"
  }
}
