	@echo "Note: Shared module is a library (no deployment)"

build: 
	@echo "ğŸ—ï¸  Building shared module..."
	yarn build

test:
	@echo "ğŸ§ª Running shared module tests..."
	yarn test

lint:
	@echo "ğŸ” Running shared module linting..."
	yarn lint

lint-fix:
	@echo "ğŸ”§ Fixing shared module lint issues..."
	yarn lint-fix

clean:
	@echo "ğŸ§¹ Cleaning shared module artifacts..."
	yarn clean

update: 
	@echo "ğŸ“¦ Updating shared module dependencies..."
	yarn up '*'

