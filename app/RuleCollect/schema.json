                        "type": "string",
                        "pattern": "((^\\.?)(((?!-)[a-zA-Z0-9-]{0,62}[a-zA-Z0-9]\\.)+[a-zA-Z]{2,63})(:\\d{1,5})?$)"
                    }
                },
