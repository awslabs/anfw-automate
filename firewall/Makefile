build: 
	@echo "ğŸ—ï¸  Building firewall module..."
	yarn build

test:
	@echo "ğŸ§ª Running firewall module tests..."
	yarn test

lint:
	@echo "ğŸ” Running firewall module linting..."
	yarn lint

lint-fix:
	@echo "ğŸ”§ Fixing firewall module lint issues..."
	yarn lint-fix

deploy: build
	@echo "ğŸš€ Deploying firewall module..."
	yarn exec cdk deploy --all

